<h1>Add a cocktail</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2>Create a new cocktail</h2>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
