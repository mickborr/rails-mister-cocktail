<!-- NavBar -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <!-- Logo -->
  <a class="navbar-brand" href="#">
    <i class="fas fa-cocktail logo"></i>
  </a>
  <!-- Button -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
         <%= link_to "Add New Cocktail", new_cocktail_path, class: "btn btn-ghost" %>
      </li>
    </ul>
  </div>
</div>

<!-- Banner -->

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1605270012917-bf157c5a9541?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1349&q=80);">
  <div class="container">
    <h1 style="font-size: 40px;">Les meilleurs cocktails du monde!</h1>
    <p>Trouve ton cocktail préférer où ajoute la recette de ton mélange favorit.</p>
  </div>
</div>
 <!-- list item -->

 <div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536936114683-1e27e62e3e9c?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=843&q=80)">
            <h2 id="card-title"><%= cocktail.name %></h2>
            <div class="card-list">
              <ul>
                <% cocktail.ingredients.each do |ingredient| %>
                    <li>
                      <%= ingredient.name %>
                    </li>
                <%end %>
              </ul>
            </div>
            <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



